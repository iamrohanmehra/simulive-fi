rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // DEBUG: Simplify to just UID check
      return isAuthenticated() && request.auth.uid == 'admin_user';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && 
                    (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'role', 'isVerified']));
      allow delete: if false; 
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if true; // Public sessions
      allow write: if isAdmin();
    }

    // Messages collection
    match /messages/{messageId} {
      allow read: if true; // Public chat for now (or strictly check active session)
      allow create: if isAuthenticated() && 
                    request.resource.data.userId == request.auth.uid;
      allow update: if false; // No editing messages
      allow delete: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }

    // Viewer Sessions collection
    match /viewer_sessions/{sessionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    // Session Analytics collection (for admin view)
    match /session_analytics/{sessionId} {
      allow read: if true; // Public or admin? Requirement says "Anyone can read analytics"
      allow write: if isAdmin();
    }

    // Polls
    match /polls/{pollId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
